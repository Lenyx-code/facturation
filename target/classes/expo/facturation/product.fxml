<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="expo.facturation.controller.ProductController">

   <top>
      <GridPane hgap="10" vgap="10">
         <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
         </padding>

         <Label text="Nom du produit" GridPane.rowIndex="0" GridPane.columnIndex="0" />
         <TextField fx:id="nom" GridPane.rowIndex="0" GridPane.columnIndex="1" />

         <Label text="Quantite en stock" GridPane.rowIndex="0" GridPane.columnIndex="2" />
         <TextField fx:id="qte" GridPane.rowIndex="0" GridPane.columnIndex="3" />

         <Label text="Prix unitaire" GridPane.rowIndex="2" GridPane.columnIndex="0" />
         <TextField fx:id="prix" GridPane.rowIndex="2" GridPane.columnIndex="1" />

         <Button fx:id="addProd" text="Ajouter un produit" onAction="#saveProduct"
            GridPane.rowIndex="3" GridPane.columnIndex="0" />

         <Button fx:id="resetForm" text="Vider le formulaire" onAction="#clearFormField"
            GridPane.rowIndex="3" GridPane.columnIndex="1" />

         <Button fx:id="validEdit" text="Valider les changement" onAction="#validEditProduct"
            GridPane.rowIndex="3" GridPane.columnIndex="2" />
         
      </GridPane>

   </top>

     <center>
      <TableView fx:id="tableProduit">
         <columns>
                <TableColumn fx:id="colId" text="ID"/>
                <TableColumn fx:id="colNom" text="Nom"/>
                <TableColumn fx:id="colQte" text="Qauntite"/>
                <TableColumn fx:id="colPrix" text="Prix unitaire"/>
                <TableColumn fx:id="colAction" text="Action" prefWidth="100.0"/>
            </columns>
      </TableView>
   </center>
   <bottom>
      <Button text="Retour" onAction="#switchToClient"/>
   </bottom>
</BorderPane>